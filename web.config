<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Proxy all requests to Node.js, preserving the full path -->
        <rule name="ProxyToNode" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:3000/admin-portal/{R:0}" />
          <serverVariables>
            <set name="HTTP_X_ORIGINAL_URL" value="{REQUEST_URI}" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>